<root>
	<windowclass name="advlogentry">
		<frame>recordsheet</frame>
		<placement>
			<size width="400" height="300" />
		</placement>
		<sizelimits>
			<dynamic />
			<minimum width="400" height="300" />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<playercontrol />
		<sheetdata>
			<sub_record_header name="header">
				<class>logentry_header</class>
			</sub_record_header>

			<frame_record_content name="contentframe" />

			<subwindow_record name="main">
				<class>logentry_main</class>
				<activate />
			</subwindow_record>
			<scrollbar_record>
				<target>main</target>
			</scrollbar_record>

			<resize_recordsheet />
			<close_recordsheet />
		</sheetdata>
	</windowclass>

	<windowclass name="logentry_main">
		<margins control="0,0,0,5" />
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<header_column name="gmheader">
				<static textres="calendar_logentry_gmheader" />
				<gmvisibleonly />
			</header_column>
			
			<ft_column name="gmlogentry">
				<gmvisibleonly />
			</ft_column>

			<header_column name="playerheader">
				<static textres="calendar_logentry_pcheader" />
				<gmvisibleonly />
			</header_column>
			
			<ft_column name="logentry" />
		</sheetdata>
	</windowclass>
	
	<windowclass name="logentry_header">
		<script>
			function onInit()
				onDateChanged();
			end

			function onDateChanged()
				local sEpoch = epoch.getValue();
				local nYear = year.getValue();
				local nMonth = month.getValue();
				local nDay = day.getValue();
				
				name.setValue(CalendarManager.getDateString(sEpoch, nYear, nMonth, nDay, true));
				if holiday then
					holiday.setValue(CalendarManager.getHolidayName(nMonth, nDay));
				end
			end
		</script>
		<sheetdata>
			<hn name="day">
				<script>
					function onValueChanged()
						window.onDateChanged();
					end
				</script>
			</hn>
			<hn name="month">
				<script>
					function onValueChanged()
						window.onDateChanged();
					end
				</script>
			</hn>
			<hn name="year">
				<script>
					function onValueChanged()
						window.onDateChanged();
					end
				</script>
			</hn>
			<hs name="epoch">
				<script>
					function onValueChanged()
						window.onDateChanged();
					end
				</script>
			</hs>
			
			<link_record_header>
				<class>advlogentry</class>
			</link_record_header>
			<string_record_name name="name">
				<anchored>
					<top offset="5" />
					<left offset="40" />
					<right offset="-35"/>
				</anchored>
				<readonly />
				<empty textres="calendar_logentry_emptyname" />
			</string_record_name>
			<genericcontrol>
				<anchored to="name" position="below" height="7" />
				<disabled />
			</genericcontrol>
			<stringcontrol name="holiday">
				<anchored to="name" position="below" offset="0,10" height="20" />
				<font>sheetlabel</font>
				<static />
				<invisible />
				<script>
					function onInit()
						onValueChanged();
					end
					function onValueChanged()
						setVisible(not isEmpty());
					end
				</script>
			</stringcontrol>
		</sheetdata>
	</windowclass>

	<windowclass name="logsmall">
		<margins control="0,0,0,2" />
		<script file="utility/scripts/calendar_log_entry.lua" />
		<sheetdata>
			<hn name="day">
				<script>
					function onValueChanged()
						window.onDateChanged();
					end
				</script>
			</hn>
			<hn name="month">
				<script>
					function onValueChanged()
						window.onDateChanged();
					end
				</script>
			</hn>
			<hn name="year">
				<script>
					function onValueChanged()
						window.onDateChanged();
					end
				</script>
			</hn>
			<hs name="epoch">
				<script>
					function onValueChanged()
						window.onDateChanged();
					end
				</script>
			</hs>

			<link_list name="open">
				<class>advlogentry</class>
			</link_list>
			
			<genericcontrol name="rightanchor">
				<anchored height="0" width="0">
					<top />
					<right />
				</anchored>
			</genericcontrol>
			<icon_access name="access" />
			<icon_modified name="modified" />

			<string_list_name name="name">
				<empty textres="calendar_logentry_emptyname" />
			</string_list_name>
		</sheetdata>
	</windowclass>
	
	<windowclass name="loglist">
		<frame>campaignlistwithtabs</frame>
		<placement>
			<size width="300" height="400" />
		</placement>
		<sizelimits>
			<minimum width="300" height="400" />
			<dynamic />
		</sizelimits>
		<softclose />
		<nodelete />
		<sheetdata>
			<windowtitlebar name="title">
				<resource>calendar_loglist_title</resource>
			</windowtitlebar>
			<anchor_calendarlog name="contentanchor" />
			
			<list_calendarlog name="list" />
			<scrollbar_list />

			<resize_campaignlistwithtabs />
			<close_campaignlist />
		</sheetdata>
	</windowclass>
</root>
