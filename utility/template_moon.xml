<?xml version="1.0" encoding="iso-8859-1"?>
<root>
  <template name="close_moon">
    <close>
      <anchored>
        <top offset="0" />
        <right offset="-8" />
      </anchored>
    </close>
  </template>
  
  <template name="list_moons">
    <windowlist>
      <script file="utility/scripts/moonlist.lua" />
      <datasource>.</datasource>
      <class>moonitem</class>
      <allowdelete />
    </windowlist>
  </template>
  
  <template name="number_moon">
    <basicnumber>
      <nodrag />
      <min>0</min>
    </basicnumber>
  </template>

  <template name="scrollbar_moons">
    <scrollbar>
      <anchored to="moons" />
      <target>moons</target>
    </scrollbar>
  </template>

  <template name="scrollbar_moonlist">
    <scrollbar>
      <anchored to="moonlist" />
      <target>moonlist</target>
    </scrollbar>
  </template>
  
</root>
