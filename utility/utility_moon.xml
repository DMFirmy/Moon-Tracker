<?xml version="1.0" encoding="iso-8859-1"?>
<root>
	<windowclass name="moontracker_configuration">
    <script file="utility/scripts/moontracker_configuration.lua" />
    <frame>moontracker_config</frame>
    <placement>
      <size width="480" height="480" />
      <nosave />
    </placement>
    <nodelete />
		<sheetdata>
      <genericcontrol name="configframe">
        <bounds>10, 40,-10,-10</bounds>
        <frame name="groupbox" />
        <disabled />
      </genericcontrol>
      <windowtitlebar name="title">
        <resource>moontracker_configuration_window_title</resource>
      </windowtitlebar>

      <genericcontrol name="rightanchor">
        <anchored to="configframe" width="0" height="0">
          <top offset="10" />
          <right offset="-20" />
        </anchored>
        <invisible />
      </genericcontrol>
      <genericcontrol name="idelete_header">
        <anchored to="rightanchor" width="20" height="20">
          <top />
          <right anchor="left" relation="relative" offset="-5" />
        </anchored>
        <disabled />
      </genericcontrol>
      
      <list_moons name="moonlist">
        <anchored to="configframe">
          <top offset="40" />
          <left offset="15" />
          <right offset="-20" />
          <bottom offset="-15" />
        </anchored>
      </list_moons>
      <scrollbar_moonlist />

      <button_iedit name="moodlist_iedit">
        <anchored to="moonlist" position="aboveright" offset="5,10" />
        <target>moonlist</target>
      </button_iedit>
      <button_iadd name="moonlist_iadd">
        <anchored to="moodlist_iedit" position="lefthigh" offset="5,0" />
        <target>moonlist</target>
      </button_iadd>
      
      <resize_moon />
      <close_moon />
		</sheetdata>
	</windowclass>

  <windowclass name="moonitem">
    <margins control="0,0,0,2" />
    <sheetdata>
      <number_moon name="period">
        <bounds>5,2,20,20</bounds>
        <tabtarget next="name" />
        <default>1</default>
      </number_moon>
      <genericcontrol name="rightanchor">
        <anchored width="0" height="0">
          <top />
          <right />
        </anchored>
        <invisible />
      </genericcontrol>
      <button_idelete name="idelete">
        <anchored width="20" height="20">
          <top offset="2" />
          <right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
        </anchored>
      </button_idelete>
      <number_moon name="shift">
        <anchored width="30" height="20">
          <top offset="2" />
          <right parent="rightanchor" anchor="left" relation="relative" offset="-10" />
        </anchored>
        <delaykeyupdate />
        <tabtarget prev="name" />
      </number_moon>
      <string_textlistitem name="name">
        <anchored position="insidetopleft" offset="35,2" height="20">
          <right parent="rightanchor" anchor="left" relation="current" offset="-5" />
        </anchored>
        <tabtarget next="shift" prev="period" />
      </string_textlistitem>
    </sheetdata>
  </windowclass>

  <windowclass name="moonphase">
    <margins control="0,0,0,2" />
    <sheetdata>
      <anchor_column name="columnanchor" />
      <simplestring name="moonname">
        <anchored width="100">
          <top parent="columnanchor" anchor="bottom" relation="relative" offset="5" />
          <left parent="columnanchor" anchor="right" relation="relative" offset="10" />
          <right />
        </anchored>
      </simplestring>
      <simplestring name="name">
        <anchored width="100">
          <top parent="moonname" anchor="bottom" relation="relative" offset="0" />
          <left parent="moonname" anchor="left" relation="relative" offset="0" />
          <right />
        </anchored>
      </simplestring>
      <genericcontrol name="phaseicon">
        <anchored width="30" height="30">
          <top parent="columnanchor" anchor="bottom" relation="absolute" offset="5" />
          <left parent="columnanchor" anchor="right" relation="absolute" offset="115" />
        </anchored>
      </genericcontrol>
    </sheetdata>
  </windowclass>
</root>
